<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center;"> Edit your training : <%= training.name %> </h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/trainings/<%= training._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="training[name]" value="<%= training.name %>" >	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="training[image]" value="<%=training.image %>">					
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="training[description]" value="<%=training.description %>">					
				</div>
				<div class="form-group">				
					<button class="btn btn-lg btn-primary btn-block">Edit</button>
				</div>	
			</form>
			<a href="/trainings"> Back to Training List </a>
		</div>	
	</div>
</div>
<% include ../partials/footer %>