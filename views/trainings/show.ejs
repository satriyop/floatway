<% include ../partials/header %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead"> Floatway Training </p>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>

		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= showTraining.image %>"/>
				<div class="caption-full">
					<h4 class="pull-right"> Price : 1234 </h4>
					<h4><a><%= showTraining.name %></a></h4>
					<p> <%= showTraining.description %></p>
					<p>
						<em>Trainer : <%= showTraining.trainer.username %> </em> 
					</p>
					<a class="btn btn-warning" href="/trainings/<%= showTraining._id %>/edit">Edit</a>
					<form action="/trainings/<%= showTraining._id %>?_method=DELETE" method="POST">
						<button class="btn btn-danger">Delete Training</button>
					</form>	

				</div>
			</div>


			<div class="well">
				<div class="text-right">
					<a href="/trainings/<%= showTraining._id %>/comments/new" class="btn btn-success"> Comment </a>
				</div>
				<hr>
				<% showTraining.comments.forEach(function(element){ %>
					<div class="row"> 
						<div class="col-md-12">
							<strong> <%= element.author.username %> </strong>
							<span class="pull-right"> 10 days ago </span>
							<p>
								<%= element.text %>
							</p>
						</div>
					</div>
				<% }) %>
			</div>

		</div>
	</div>
</div>


<% include ../partials/footer %>
